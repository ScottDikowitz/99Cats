<h1>
<table style="border: 1px solid black";>
  <% attributes = [@cat.name, @cat.birth_date,@cat.age.to_i,@cat.color, @cat.sex, @cat.description] %>
  <% descriptions = ["Name:", "Birth Date:", "Age:", "Color:", "Sex:", "Description:"] %>
  <% attributes.each_index do |num| %>
  <tr>
    <td style="border: 1px solid black"><%= descriptions[num] %></td>
    <td style="border: 1px solid black"><%= attributes[num] %></td>
  </tr>
  <% end %>
</table>
</h1>

<%= link_to "Edit #{@cat.name}", edit_cat_url(@cat) %>

<h2>Rental Requests</h2>
<table>
  <tr>
    <th>Start Date</th>
    <th>End Date</th>
    <th>Status</th>
  </tr>
  <% @cat.rental_requests.order("start_date").each do |req| %>
    <%= render "req_tr", req: req %>
  <% end %>
</table>
